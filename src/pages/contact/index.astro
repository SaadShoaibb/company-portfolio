---
import { CutCornerButton } from "../../components/CutCornerButton";
import Input from "../../components/Input.astro";
import InteriorContent from "../../components/InteriorContent.astro";
import InteriorHero from "../../components/InteriorHero.astro";
import Textarea from "../../components/Textarea.astro";
import DefaultLayout from "../../layouts/Default.astro";
---

<DefaultLayout>
    <InteriorHero>
        <p
            class="uppercase font-extrabold text-center text-zinc-500 tracking-wider"
        >
            Let's Talk
        </p>
        <h1
            class="font-heading font-black lg:text-7xl md:text-6xl text-5xl text-center mt-4"
        >
            Contact Us
        </h1>
        <p
            class="text-center md:text-2xl text-xl mt-6 max-w-xl mx-auto text-zinc-400"
        >
            Let’s bring your ideas to life! From software development and web
            design to NFT art, animations, digital marketing, and SEO, we offer
            everything you need to stand out.<br /> Reach out today, and let’s create
            something extraordinary together!
        </p>
    </InteriorHero>

    <InteriorContent>
        <div class="pb=[1000px] max-w-xl mx-auto">
            <h2 class="font-heading font-black text-3xl">What can we help you with?</h2>
            <form class="flex flex-col mt-8" name="contact" method="post" data-netlify="true">
                <label for="name">Name</label>
                <Input type="text" name="name" id="name" class="mt-1" />
                <label class="mt-4" for="email">Email</label>
                <Input type="email" name="email" id="email" class="mt-1"/>
                <label class="mt-4" for="message">Message</label>
                <Textarea name="message" id="message" class="mt-1"/>
                <CutCornerButton className="mt-4">Send Message</CutCornerButton>

            </form>
        </div>
    </InteriorContent>
</DefaultLayout>
